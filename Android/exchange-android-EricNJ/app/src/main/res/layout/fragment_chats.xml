<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_Grey"
    tools:context=".chatting.ChatsActivity">


    <ImageView
        android:id="@+id/backButton"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_back" />

    <EditText
        android:id="@+id/searchperson"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/addButton"
        android:layout_toEndOf="@+id/backButton"
        android:focusable="auto"
        android:hint="Search Person"
        android:textColor="@color/Vibrant_Blue"
        android:textColorHint="@color/Vibrant_Blue"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/addButton"
        android:layout_width="45dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="9dp"
        android:src="@drawable/ic_add" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVcurrency"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchperson"
        tools:listitem="@layout/item_users" />
</RelativeLayout>